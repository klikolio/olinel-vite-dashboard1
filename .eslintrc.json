{
	"extends": "plugin:prettier/recommended",
	"env": {
		"browser": true,
		"es2021": true
	},
	"ignorePatterns": [
		"dist",
		"src/modules/**/scripts/*.js",
		"postcss.config.js",
		"vite.config.js"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"warn",
			{ "endOfLine": "auto" }
		],
		"no-undef": "off",
		"no-new": "off"
	}
}
