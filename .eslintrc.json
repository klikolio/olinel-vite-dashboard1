{
  "extends": "plugin:prettier/recommended",
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "src/build/vendors/**/scripts/*.js",
    "postcss.config.js",
    "vite.config.js"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "no-new": "off"
  }
}