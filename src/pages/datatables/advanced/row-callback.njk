{% extends "components/template.njk" %}
<!-- prettier-ignore-start -->
{% set page_title = "Datatables Row Callback" %}
{% set page_id = "datatables.advanced.row-callback" %}
{% set breadcrumb = [
  { text: "Dashboard", link: "/", icon: '<i data-feather="home"></i>' },
  { text: "Datatables" },
  { text: "Advanced" },
  { text: "Row Callback", link: "/datatables/advanced/row-callback.html" }
] %}
<!-- prettier-ignore-end -->

{% block main_script %}
	<script type="module" src="/src/app/pages/datatables/advanced/row-callback.js"></script>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-12">
			{# BEGIN Portlet #}
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Datatables row callback</h3>
				</div>
				<div class="portlet-body">
					<p>
						The following example shows how a callback function can be used to format a particular row at draw time. For
						each row that is generated for display, the <code>createdRow</code> function is called once and once only.
					</p>
					<hr />

					{# BEGIN Datatables #}
					<table id="datatables-1" class="table table-bordered table-striped table-hover">
						<thead>
							<tr>
								<th>ID</th>
								<th>Card ID</th>
								<th>Name</th>
								<th>Position</th>
								<th>Office</th>
								<th>Age</th>
								<th>Start date</th>
								<th>Salary</th>
							</tr>
						</thead>
					</table>
					{# END Datatables #}
				</div>
			</div>
			{# END Portlet #}
		</div>
	</div>
{% endblock %}
