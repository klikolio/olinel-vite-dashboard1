{% extends "components/template.njk" %}
<!-- prettier-ignore-start -->
{% set page_title = "Progress" %}
{% set page_id = "elements.base.progress" %}
{% set breadcrumb = [
  { text: "Dashboard", link: "/", icon: '<i data-feather="home"></i>' },
  { text: "Elements" },
  { text: "Base" },
  { text: "Progress", link: "/elements/base/progress.html" }
] %}
<!-- prettier-ignore-end -->

{% block content %}
	<div class="row">
		<div class="col-md-6">
			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Basic</h3>
				</div>
				<div class="portlet-body">
					<p>
						Progress components are built with two HTML elements, some CSS to set the width, and a few attributes. We
						don't use
						<a target="_blank" href="https://developer.mozilla.org/en-US/docs/Web/HTML/Element/progress">
							the HTML5 <code>&lt;progress&gt;</code> element</a
						>, ensuring you can stack progress bars, animate them, and place text labels over them.
					</p>

					<!-- BEGIN Progresses -->
					<div class="vstack gap-2">
						<div class="progress">
							<div class="progress-bar" style="width: 25%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar" style="width: 50%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar" style="width: 75%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar" style="width: 100%"></div>
						</div>
					</div>
					<!-- END Progresses -->
				</div>
			</div>
			<!-- END Portlet -->

			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Striped</h3>
				</div>
				<div class="portlet-body">
					<p>
						Add <code>.progress-bar-striped</code> to any <code>.progress-bar</code> to apply a stripe via CSS gradient
						over the progress bar's background color.
					</p>

					<!-- BEGIN Portlet -->
					<div class="portlet">
						<div class="portlet-body">
							<!-- BEGIN Progresses -->
							<div class="vstack gap-2">
								<div class="progress">
									<div class="progress-bar progress-bar-striped bg-primary" style="width: 20%"></div>
								</div>
								<div class="progress">
									<div class="progress-bar progress-bar-striped bg-secondary" style="width: 30%"></div>
								</div>
								<div class="progress">
									<div class="progress-bar progress-bar-striped bg-info" style="width: 40%"></div>
								</div>
							</div>
							<!-- END Progresses -->
						</div>
					</div>
					<!-- END Portlet -->

					<p>
						The striped gradient can also be animated. Add
						<code>.progress-bar-animated</code> to <code>.progress-bar</code> to animate the stripes right to left via
						CSS3 animations.
					</p>

					<!-- BEGIN Portlet -->
					<div class="portlet mb-0">
						<div class="portlet-body">
							<!-- BEGIN Progresses -->
							<div class="vstack gap-2">
								<div class="progress">
									<div
										class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
										style="width: 20%"
									></div>
								</div>
								<div class="progress">
									<div
										class="progress-bar progress-bar-striped progress-bar-animated bg-secondary"
										style="width: 30%"
									></div>
								</div>
								<div class="progress">
									<div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: 40%"></div>
								</div>
							</div>
							<!-- END Progresses -->
						</div>
					</div>
					<!-- END Portlet -->
				</div>
			</div>
			<!-- END Portlet -->

			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Multiple</h3>
				</div>
				<div class="portlet-body">
					<p>You can include multiple progress components inside a container with <code>.progress-stacked</code> to create a single stacked progress bar. Note that in this case, the styling to set the visual width of the progress bar <em>must</em> be applied to the <code>.progress</code> elements, rather than the <code>.progress-bar</code>s.</p>

					<!-- BEGIN Progresses -->
					<div class="progress-stacked">
						<div class="progress" style="width: 15%">
							<div class="progress-bar"></div>
						</div>
						<div class="progress" style="width: 30%">
							<div class="progress-bar bg-success"></div>
						</div>
						<div class="progress" style="width: 20%">
							<div class="progress-bar bg-info"></div>
						</div>
					</div>
					<!-- END Progresses -->
				</div>
			</div>
			<!-- END Portlet -->
		</div>
		<div class="col-md-6">
			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Contextual color</h3>
				</div>
				<div class="portlet-body">
					<p>Use background utility classes to change the appearance of individual progress bars.</p>

					<!-- BEGIN Progresses -->
					<div class="vstack gap-2">
						<div class="progress">
							<div class="progress-bar bg-primary" style="width: 20%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-secondary" style="width: 30%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-success" style="width: 40%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-info" style="width: 50%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-danger" style="width: 60%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-warning" style="width: 70%"></div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-dark" style="width: 80%"></div>
						</div>
					</div>
					<!-- END Progresses -->
				</div>
			</div>
			<!-- END Portlet -->

			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Label</h3>
				</div>
				<div class="portlet-body">
					<p>
						Add labels to your progress bars by placing text within the
						<code>.progress-bar</code>.
					</p>

					<!-- BEGIN Progresses -->
					<div class="vstack gap-2">
						<div class="progress">
							<div class="progress-bar bg-primary" style="width: 20%">20%</div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-secondary" style="width: 30%">30%</div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-success" style="width: 40%">40%</div>
						</div>
					</div>
					<!-- END Progresses -->
				</div>
			</div>
			<!-- END Portlet -->

			<!-- BEGIN Portlet -->
			<div class="portlet">
				<div class="portlet-header portlet-header-bordered">
					<h3 class="portlet-title">Height</h3>
				</div>
				<div class="portlet-body">
					<p>Use predefined modifier classes <code>.progress-{sm|lg}</code> to change progress element height.</p>

					<!-- BEGIN Progresses -->
					<div class="vstack gap-2 mb-3">
						<div class="progress progress-sm">
							<div class="progress-bar" style="width: 25%;"></div>
						</div>
						<div class="progress progress-lg">
							<div class="progress-bar" style="width: 25%;"></div>
						</div>
					</div>
					<!-- END Progresses -->

					<p>
						You can manually set a <code>height</code> value on the <code>.progress</code>, so if you change that value
						the inner <code>.progress-bar</code> will automatically resize accordingly.
					</p>

					<!-- BEGIN Progresses -->
					<div class="vstack gap-2">
						<div class="progress" style="height: 2px;">
							<div class="progress-bar" style="width: 25%;"></div>
						</div>
						<div class="progress" style="height: 10px;">
							<div class="progress-bar" style="width: 25%;"></div>
						</div>
					</div>
					<!-- END Progresses -->
				</div>
			</div>
			<!-- END Portlet -->
		</div>
	</div>
{% endblock %}
